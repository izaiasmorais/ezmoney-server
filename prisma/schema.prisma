generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id    String @id @default(uuid())
  name  String
  email String

  transactions Transaction[]
  invoices     Invoice[]
}

model Transaction {
  id          String   @id @default(uuid())
  title       String
  description String
  price       Int
  type        String
  createAt    DateTime @default(now())

  client   Client @relation(fields: [clientId], references: [id])
  clientId String
}

model Invoice {
  id      String @id @default(uuid())
  title   String
  status  String
  price   Int
  dueDate DateTime

  client   Client @relation(fields: [clientId], references: [id])
  clientId String
}
